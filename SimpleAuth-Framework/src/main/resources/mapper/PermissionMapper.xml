<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.eu.yaesakura.simpleauth.framework.mapper.PermissionMapper">

    <!--  根据权限ID集合查询权限  -->
    <select id="getPermissionsByPermissionIds" resultType="org.eu.yaesakura.simpleauth.framework.domain.entity.Permission">
        SELECT *
        FROM permission
        WHERE id IN
        <foreach collection="permissionIdSet" item="permissionId" separator="," open="(" close=")">
            #{permissionId}
        </foreach>
    </select>

</mapper>